#!/bin/bash

pwd=$(pwd)
dir=$*

watch(){
  if [[ $dir == "" ]]
  then
    echo $pwd
  else
    for pdf in $dir
    do
      echo $pwd/$pdf
    done
  fi
}

target(){
  if [[ $dir == "" ]]
  then
    echo "multicore"
  else
    for pdf in $dir
    do
      echo $pdf | sed -e "s/.tex/.pdf/g"
    done
  fi
}

while file=$(inotifywait -r -q -e delete -e create -e modify -e move --exclude '/\..+' --format %f $(watch)); do
  case "$file" in
    *.tex | *.bib | *.sty | *.cls | *.bst | *.jpg | *.png | *.eps | *.csv )
    make $(target)
    ;;
    *)
     # echo ignore $file
    ;;
  esac

  [ ! -d $pwd ] || inotifywait -qqt 2 -e create -e moved_to $pwd
  cd $pwd
done
